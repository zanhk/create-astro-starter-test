{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": "src",
		"paths": {
			"@src/*": ["*"],
			"@lib/*": ["lib/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@pages/*": ["pages/*"],
			"@locales/*": ["locales/*"]
		}
	}
}
